{% extends 'layout/base.html.twig' %}

{% block body %}
	<div class="absolute inset-0 flex justify-center items-center">
		<div class="bg-slate-200 w-96 h-auto rounded-lg pt-8 pb-8 px-8 flex flex-col items-center">
			{% embed "logo.html.twig" %}{% endembed %}
			{% block content %}{% endblock %}
			{% for message in app.flashes('error') %}
				<div class="border border-red-400 bg-red-200 text-red-600 rounded w-full p-2 mt-4 flex">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 flex-shrink-0" fill="none" viewbox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
					</svg>
					{{ message }}
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
