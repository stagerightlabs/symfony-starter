{% extends 'layout/base.html.twig' %}

{% block body %}
	<header class="mb-4 lg:mb-12" id="primary">
		<div class="bg-slate-300 text-slate-700  h-16 flex items-center px-4">
			<div class="flex">
				<svg class="w-8 h-8 mr-2" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="url(#grad1)">
					<defs>
						<linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
							<stop offset="0%" style="stop-color:#F43F5E;stop-opacity:1"/>
							<stop offset="100%" style="stop-color:#0EA5E9;stop-opacity:1"/>
						</linearGradient>
					</defs>
					<path fill-rule="evenodd" d="M20,10.1804604 L10,11.8471271 L10,18.5 C10,20.477434 8.17292083,22 6,22 C3.82707917,22 2,20.477434 2,18.5 C2,16.522566 3.82707917,15 6,15 C6.72317475,15 7.40804269,15.1686455 8.00000003,15.4665774 L8.00000003,4.15287291 L22,1.81953958 L22,17.5 C22,19.477434 20.1729208,21 18,21 C15.8270792,21 14,19.477434 14,17.5 C14,15.522566 15.8270792,14 18,14 C18.7231748,14 19.4080427,14.1686455 20,14.4665774 L20,10.1804604 Z M6,20 C7.14078767,20 8,19.2839897 8,18.5 C8,17.7160103 7.14078767,17 6,17 C4.85921233,17 4,17.7160103 4,18.5 C4,19.2839897 4.85921233,20 6,20 Z M18,19 C19.1407877,19 20,18.2839897 20,17.5 C20,16.7160103 19.1407877,16 18,16 C16.8592123,16 16,16.7160103 16,17.5 C16,18.2839897 16.8592123,19 18,19 Z M10,5.84712709 L10,9.81953958 L20,8.15287291 L20,4.18046042 L10,5.84712709 Z"/>
				</svg>
				<span class="text-lg font-bold bg-gradient-to-br from-rose-500 to-sky-500 text-transparent bg-clip-text">
					Symfony Starter
				</span>
			</div>
			{# Desktop Navigation #}
			<div class="flex-1 px-2 mx-2">
				<nav class="items-stretch hidden lg:flex">
					<a class="mx-2 h-full px-2 py-1 rounded hover:bg-slate-500 hover:text-slate-50" href="{{ path('lucky') }}">
						Lucky Number
					</a>
					<a class="mx-2 h-full px-2 py-1 rounded hover:bg-slate-500 hover:text-slate-50" href="#">
						Page 2
					</a>
					<a class="mx-2 h-full px-2 py-1 rounded hover:bg-slate-500 hover:text-slate-50" href="#">
						Page 3
					</a>
					<a class="mx-2 h-full px-2 py-1 rounded hover:bg-slate-500 hover:text-slate-50" href="#">
						Page 4
					</a>
				</nav>
			</div>
			{% if app.user %}
				<div x-data="{open: false}" class="hidden lg:block">
					<button @click="open = !open" class="flex items-center mx-2 h-full px-2 py-1 rounded hover:bg-slate-500 hover:text-slate-50">
						{{ app.user.email }}
						<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewbox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
						</svg>
					</button>
					<div x-show="open" class="absolute right-4 mt-2 py-2 w-48 bg-white rounded-md shadow-xl z-20" @click.away="open = false">
						<a href="{{ path('logout') }}" class="block px-4 py-2 text-sm capitalize text-gray-700 hover:bg-sky-500 hover:text-slate-50">
							Log Out
						</a>
					</div>
				</div>
			{% endif %}
			{# Mobile Navigation #}
			<div class="lg:hidden" x-data="{open: false}">
				<button @click="open = !open">
					<svg xmlns="http://www.w3.org/2000/svg" x-show="!open" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
					</svg>
					<svg xmlns="http://www.w3.org/2000/svg" x-show="open" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
					</svg>
				</button>
				<template x-teleport="header#primary">
					<div class="bg-white rounded-md z-20" x-show="open" @click.away="open = false" x-transition>
						<nav class="p-2">
							<a class="block rounded mx-2 px-2 py-1 hover:bg-slate-500 hover:text-slate-50" href="{{ path('lucky') }}">
								Lucky Number
							</a>
							<a class="block rounded mx-2 px-2 py-1 hover:bg-slate-500 hover:text-slate-50" href="#">
								Page 2
							</a>
							<a class="block rounded mx-2 px-2 py-1 hover:bg-slate-500 hover:text-slate-50" href="#">
								Page 3
							</a>
							<a class="block rounded mx-2 px-2 py-1 hover:bg-slate-500 hover:text-slate-50" href="#">
								Page 4
							</a>
						</nav>
						{% if app.user %}
							<p class="bg-slate-50 text-slate-400 mx-2 px-2 py-2 flex items-center">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
								</svg>
								{{ app.user.email }}
							</p>
							<a href="{{ path('logout') }}" class="block rounded mx-2 px-4 py-1 hover:bg-slate-500 hover:text-slate-50">
								Log Out
							</a>
						{% endif %}
					</div>
				</template>
			</div>
		</div>
	</header>

	{% block content %}{% endblock %}

{% endblock %}
